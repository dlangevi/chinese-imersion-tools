extends ../layouts/dashboard.pug

block config
    - var bodyClass = 'sb-nav-fixed'
    - var pageTitle = 'Library'
    - var sidenavStyle = 'sb-sidenav-dark'

block content

  .container-fluid.px-4
      include includes/page-header.pug
      .row
        .col-xl-5
            .card.mb-4
              .card-header
                | All Books
              .card-body
                div(id='bookList' class='ag-theme-material myGrid')

        .col-xl-5
            .card.mb-4
              .card-header
                | My Books
                select(id="myBookLists" name="Files")
              .card-body
                div(id='myBookList' class='ag-theme-material myGrid')
        .col-xl-2
            #buttons
              button#addList New List
              button#deleteList Delete List
              button#saveList Save List

append scripts
    script(src='js/library.js')
