extends ../layouts/dashboard.pug

block config
    - var bodyClass = 'sb-nav-fixed'
    - var pageTitle = 'Learn Chinese';
    - var index = true;
    - var sidenavStyle = 'sb-sidenav-dark'
    - var showSideBar = true;
    
prepend css
    //- Load Simple DataTables Stylesheet
    link(href='https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css', rel='stylesheet')

block content
    .container-fluid.px-4
        include includes/page-header.pug
        .row
            .col-xl-11
                .card.mb-4
                    .card-header
                        i.fas.fa-chart-area.me-1
                        | Look how many words you are learning 
                    .card-body
                        canvas#myAreaChart(width='100%', height='40')

            .col-xl-1
                #myStats

                    
            // .col-xl-6
                .card.mb-4
                    .card-header
                        i.fas.fa-chart-bar.me-1
                        | Such Progress
                    .card-body
                        canvas#myBarChart(width='100%', height='40')

append scripts
    //- Load Chart.js and demos
    script(src="https://cdn.jsdelivr.net/npm/chart.js@^3")
    script(src="https://cdn.jsdelivr.net/npm/luxon@^2")
    script(src="https://cdn.jsdelivr.net/npm/chartjs-adapter-luxon@^1")
    script(type='module', src='js/index.js')
